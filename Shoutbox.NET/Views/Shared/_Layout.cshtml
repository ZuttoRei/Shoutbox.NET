<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="container">
        <div id="wrapper">
            <div id="pageheader">
                <div id="logo"></div>
                <div id="header-center">
                    <ul id="headermenu">
                        <li>@Html.ActionLink("Shoutbox", "Index", "Home")</li>
                        <li>@Html.ActionLink("Historie", "Index", "Home")</li>
                        <li>@Html.ActionLink("Gebruik", "Index", "Home")</li>
                        <li>@Html.ActionLink("Uitwijk Delphi SDA", "Index", "Home")</li>

                        <li id="Historie"><a href="/Home/Historie">Historie</a></li>
                        <li id="Gebruik"><a>Gebruik</a></li>
                        <li id="Uitwijk Delphi SDA"><a>Uitwijk Delphi SDA</a></li>
                    </ul>
                    <span id="department">CCSDEU Shoutbox</span>
                </div>
            </div>
            <div id="topnav" role="navigation">
                <span><i class="@ViewBag.Icon" aria-hidden="true"></i> @ViewBag.Title</span>
            </div>

            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Shoutbox</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $("a:contains('@ViewBag.Title')").addClass("selectedMenuItem");
    </script>
</body>
</html>
